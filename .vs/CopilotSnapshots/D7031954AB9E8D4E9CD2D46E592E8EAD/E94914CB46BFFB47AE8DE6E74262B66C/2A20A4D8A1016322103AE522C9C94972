using System.ComponentModel.DataAnnotations;

namespace SupermercadoCRUD2.Models.Dto
{
    public class ProductoDto
    {
        public int IdProducto { get; set; }

        [Required(ErrorMessage = "El nombre es obligatorio")]
        public string? Nombre { get; set; }

        [Required(ErrorMessage = "Debe especificar tipo de medida")]
        public string? Medida { get; set; }

        [Required(ErrorMessage = "El precio es obligatorio")]
        [Range(0, int.MaxValue, ErrorMessage = "El precio debe ser un valor positivo")]
        public int Precio { get; set; }

        [Required(ErrorMessage = "El stock es obligatorio")]
        [Range(0, int.MaxValue, ErrorMessage = "El stock debe ser un valor positivo")]
        public int Stock { get; set; }

        [Required(ErrorMessage = "Debe seleccionar una categoría")]
        public int IdCategoria { get; set; }

        // Campo auxiliar para mostrar el nombre de la categoría en listados o vistas
        public string? NombreCategoria { get; set; }
    }
}
